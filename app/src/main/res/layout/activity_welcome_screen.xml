<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SyncPortalActivity">

    <TextView
            android:id="@+id/sync_portal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/title_logitech"/>

    <ImageView
            android:id="@+id/syncing_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/lk_sync_icon"
            android:layout_centerInParent="true"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_centerHorizontal="true"
                  android:gravity="center"
                  android:layout_alignParentBottom="true">
        <Button
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_to_sync_portal"
                android:layout_marginBottom="15dp"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color"
                android:background="@drawable/button_shape"/>
        <Button
                android:id="@+id/create_account_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_account"
                android:layout_marginBottom="15dp"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color"
                android:background="@drawable/button_shape"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/do_not_use_sync_portal"
                  android:layout_marginBottom="15dp"
                  android:textColor="@color/view_background_color"/>
    </LinearLayout>

</RelativeLayout>